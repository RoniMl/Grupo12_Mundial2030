<!DOCTYPE html>
<html>
  <head>
    <%- include("head") %>
  </head>
  <body>
    <header><%- include("header") %></header>
    <main>
      <div>
        <a href="/cards/arte/compartir">
          <div class="d-grid boton-compartir">
            <button class="btn btn-primary" type="button">
              Comparti tu arte
            </button>
          </div>
        </a>
      </div>
      
      <div class="arteMain">
      <% for(let i = 0; i<arte.length; i++) { %>
         <div>
          <img
            src="/img/<%= arte[i].imagen%>"
            class="rounded"
            height="400px"
          />
          <div class="botonesFotos">
            <form>
              <button type="button" class="btn btn-danger">
                <i class="fa-regular fa-heart"></i>
              </button>
            </form>
            <% if(usuarioLogeado && usuarioLogeado.id == arte[i].usuarioFK){%>
            <form>
              <a href="/cards/arte/editar/<%=arte[i].id%>">
              <button type="button" class="btn btn-success">
                <i class="fa-regular fa-pen-to-square"></i>
              </button>
              </a>
            </form>
            <% } %>
            <form>
              <a href="/cards/arte/detalles/<%= arte[i].id %>">
              <button type="button" class="btn btn-info">
                <i class="fa-solid fa-info" style="color: #ffffff"></i>
              </button>
              </a>
            </form>
          </div>
        </div>
      <% } %>
    </div>
    </main>
    <footer><%- include('footer') %></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
